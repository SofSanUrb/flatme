<div class="container">
  <div class="section">
  <form method="POST" action="/writereview" class="row g-3">
  <p>Please fill out all the mandatory fields (*).</p>
  <hr>

    <div class="col-12">
      <label for="title" class="form-label">Title <span class="form-text">*</span> </label>
      <input type="text" name="title" id="title" class="form-control">
    </div>

    <div class="col-md-6">
      <label for="score" class="form-label">Score out of 5 <span class="form-text">*</span></label> 
      <select id="score" name="score" class="form-select" aria-label=".form-select-sm example">
        <option selected></option>
          <option value="1">‚≠ê</option>
          <option value="2">‚≠ê‚≠ê</option>
          <option value="3">‚≠ê‚≠ê‚≠ê</option>
          <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê</option>
          <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</option>
      </select>
    </div>

      <div class="col-md-6">
        <label for="tags" class="form-label">Select a label <span class="form-text">(Optional field)</span> </label> 
        <select id="tags" name="tags" class="form-select" aria-label=".form-select-sm example">
          <option selected></option>
            <option value="Family">Family</option>
            <option value="Gay-friendly">Gay-friendly</option>
            <option value="Students">Students</option>
            <option value="International">International</option>
            <option value="Party-friendly">Party-friendly</option>
            <option value="Commercial area">Commercial area</option>
            <option value="Green area">Green area</option>
            <option value="Sports options">Sports options</option>
        </select>
      </div>

    <div class="col-md-6">
        <label for="city" class="form-label">City <span class="form-text">*</span></label>
        <input type="text" name="city" id="city" class="form-control">
    </div>

    <div class="col-md-6">
      <label for="zipcode" class="form-label">Zipcode <span class="form-text">*</span> </label>
      <input type="text" name="zipcode" id="zipcode" class="form-control">
    </div>



    <div class="col-12">
      <label for="review" class="form-label">Your review <span class="form-text">*</span> </label>
      <input type="text" name="review" id="review" class="form-control">
    </div>
        
      <div class="col-12 text-center">
        <button type="submit" class="mybtn btn btn-primary">Save as draft</button>
        <button type="submit" class="mybtn btn btn-primary" formaction="/publishreview">Publish!</button>
      </div>
      </form>
      <br>
    </div>
  </div>
</div>

